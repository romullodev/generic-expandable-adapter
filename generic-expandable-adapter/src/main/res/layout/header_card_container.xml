<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.apachat.swipereveallayout.core.SwipeLayout
        android:id="@+id/swipeRevealLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_header_height"
        android:layout_marginHorizontal="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_xsmall"
        app:dragEdge="right"
        app:mode="same_level">

        <!-- Your secondary layout here -->
        <include
            android:id="@+id/layoutSwipeOnHeader"
            layout="@layout/generic_swipe_option"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <!-- Your main layout here -->
        <FrameLayout
            android:id="@+id/frameLayoutCustomHeaderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.apachat.swipereveallayout.core.SwipeLayout>
</layout>